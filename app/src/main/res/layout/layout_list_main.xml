<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/foto"
        android:layout_width="@dimen/width_img_list_main"
        android:layout_height="@dimen/width_img_list_main"
        android:src="@drawable/noimagen"
        android:contentDescription="@string/content_description_logo"
        android:adjustViewBounds="true"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/numero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="@dimen/lista_main_titulo" />

            <TextView android:id="@+id/descripcion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/lista_main_titulo" />

        </LinearLayout>


        <TextView android:id="@+id/ubicacion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="@dimen/lista_main_subs" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/fecha"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textStyle="normal"
                android:textSize="@dimen/lista_main_subs" />

            <TextView android:id="@+id/rpu"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="normal"
                android:textSize="@dimen/lista_main_subs" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>