<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:gravity="center"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:descendantFocusability="blocksDescendants">

<LinearLayout android:id="@+id/info"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <TextView android:id="@+id/numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/lista_main_titulo" />

    <TextView android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="@dimen/lista_main_subs" />

    <TextView android:id="@+id/serial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="@dimen/lista_main_subs" />

    <TextView android:id="@+id/ubic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="@dimen/lista_main_subs" />
</LinearLayout>

        <CheckBox android:id="@+id/check"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/check_margin"/>

    <LinearLayout android:id="@+id/items"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/rpu"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/rpu"/>
        <ImageButton
            android:id="@+id/camera"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"/>
        <ImageButton
            android:id="@+id/settings"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/settings"/>

    </LinearLayout>
</LinearLayout>