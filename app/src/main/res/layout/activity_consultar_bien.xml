<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pack.tomainventario.tomadeinventario.ConsultarBien">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/check_margin"
        android:layout_marginTop="@dimen/check_margin">

        <Spinner android:id="@+id/cmbTipo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:entries="@array/serialnumero"/>

        <EditText android:id="@+id/editCod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <Button
            android:id="@+id/bConsultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="Buscar"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal">

        <TextView android:id="@+id/txtNum"
            android:text="@string/numero"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/lista_main_subs"/>

        <EditText android:id="@+id/editNum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:focusable="false"
            android:inputType="text" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal">

        <TextView android:id="@+id/txtDesc"
            android:text="@string/descripcion"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/lista_main_subs"/>

        <EditText android:id="@+id/editDesc"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal">

        <TextView android:id="@+id/txtSerial"
            android:text="@string/serial"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/lista_main_subs"/>

        <EditText android:id="@+id/editSerial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:focusable="false"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal">

        <TextView android:id="@+id/txtUbic"
            android:text="@string/ubic"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/lista_main_subs"/>

        <EditText android:id="@+id/editUbic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:focusable="false"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal">

        <TextView android:id="@+id/txtStatus"
            android:text="@string/status"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/lista_main_subs"/>

        <EditText android:id="@+id/editStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:focusable="false"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal">

        <TextView android:id="@+id/txtUni"
            android:text="@string/unidad"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/lista_main_subs"/>

        <EditText android:id="@+id/editUni1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:focusable="false"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal">

        <TextView android:id="@+id/txtSede"
            android:text="@string/sede"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/lista_main_subs"/>

        <EditText android:id="@+id/editSede"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal">

        <TextView android:id="@+id/txtRpp"
            android:text="@string/rpp"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/lista_main_subs"/>

        <EditText android:id="@+id/editRpp1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:focusable="false"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal">

        <TextView android:id="@+id/txtUsuario"
            android:text="@string/usuario"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/lista_main_subs"/>

        <EditText android:id="@+id/editRpu1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:focusable="false"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/formulario"
        android:orientation="horizontal">

        <TextView android:id="@+id/txtEdo"
            android:text="@string/edo"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/lista_main_subs"/>

        <EditText android:id="@+id/editEdo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:focusable="false"
            android:inputType="text" />

    </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>
