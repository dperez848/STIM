<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/txt_edo"
        android:text="@string/estado"
        android:layout_marginTop="@dimen/margin_top_titulo"
        android:textSize="@dimen/regular"
        android:layout_marginLeft="@dimen/check_margin"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner android:id="@+id/estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_top_button"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView android:id="@+id/txt_comment"
            android:text="@string/observacion"
            android:layout_marginTop="@dimen/margin_top_titulo"
            android:textSize="@dimen/regular"
            android:layout_marginLeft="@dimen/check_margin"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:layout_marginLeft="@dimen/check_margin"
            android:layout_marginRight="@dimen/check_margin"
            android:layout_marginBottom="@dimen/check_margin"
            android:layout_marginTop="@dimen/check_margin"/>

    </LinearLayout>
</LinearLayout>